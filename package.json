{
  "name": "household-budget-app",
  "version": "2.0.0",
  "description": "家計簿アプリ - セキュア設計、モジュール化アーキテクチャ",
  "type": "module",
  "main": "src/server/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/server/index.js",
    "start:legacy": "node server.js",
    "dev": "node --watch src/server/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "echo 'Add ESLint configuration'"
  },
  "keywords": [
    "household",
    "budget",
    "finance",
    "japanese",
    "secure"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "injectGlobals": true,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.cjs"
    ],
    "moduleFileExtensions": [
      "js",
      "cjs"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "app.js"
    ],
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "uuid": "^13.0.0"
  }
}
